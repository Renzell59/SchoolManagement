@model ChangePasswordViewModel

@{ 
    ViewBag.Title = "Change Password";
}

<div class="container mt-3 p-5 bg-light col-sm-3 rounded">
    <div class="border-bottom">
        <h2>Change Password</h2>
    </div>
    <div class="mt-2">
        <form asp-controller="Account" asp-action="ChangePassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.CurrentPassword" class="font-weight-bold"></label>
                <input asp-for="@Model.CurrentPassword" class="form-control" placeholder="Current Password"/>
                <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewPassword" class="font-weight-bold"></label>
                <input asp-for="@Model.NewPassword" class="form-control" placeholder="New Password"/>
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmNewPassword" class="font-weight-bold"></label>
                <input asp-for="@Model.ConfirmNewPassword" class="form-control" placeholder="Confirm New Password"/>
                <span asp-validation-for="@Model.ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button style="padding:0px;border:none;background:none;">
                    <img src="~/images/changepassword.png" alt="Alternate Text" class="img-fluid" style="height:35px;width:35px"/>
                </button>
                <a asp-controller="Home" asp-action="Students" class="ml-2">
                    <img src="~/images/back.png" alt="Alternate Text" style="height:35px;width:35px;"/>
                </a>
            </div>
        </form>
    </div>
</div>