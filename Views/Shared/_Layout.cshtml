@inject UserManager<IdentityUser> _userManager
@inject SignInManager<IdentityUser> _signInManager
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/css/Style.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark" style="height:35px;"></nav>
    <nav class="navbar sticky-top navbar-light bg-light navbar-expand-sm border-bottom align-content-center">
        <a asp-controller="Home" asp-action="Index">
            <img asp-append-version="true" style="width:70px; height:70px;" class="mr-auto ml-auto" src="~/images/bannertopleft.png" alt="Alternate Text" />
        </a>
            <ul class="navbar-nav mt-xs-3 mb-xs-3  justify-content-center">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link mr-5">Home</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Create" class="nav-link mr-5">Create</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Students" class="nav-link mr-5">Students</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Administration" asp-action="Roles" class="nav-link mr-5" >Roles</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Administration" asp-action="Users" class="nav-link mr-5">Users</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto mt-xs-3 mb-xs-3 align-self-end">
                @if (_signInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="nav-link btn btn-link">
                                @User.Identity.Name logout
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                    </li>
                }
            </ul>
    </nav>
    <div class="row">
        <nav class="navbar-light col-sm-1 bg-light border-right text-center">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">content</a>
                </li>
            </ul>
        </nav>
        <div class="col-sm-11">
            @RenderBody()
        </div>

    </div>
            @if (IsSectionDefined("Scripts"))
            {
                @RenderSection("Scripts", required: true)
            }
</body>
</html>

